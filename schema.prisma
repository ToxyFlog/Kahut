generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}


model GameUser {
    username  String @db.VarChar(30)
    game_code String @db.VarChar(6)
    score     Int    @default(0)

    game      Game   @relation(fields: [game_code], references: [code])

    @@id([username, game_code])
}

model Game {
    code    String  @db.VarChar(6) @id
    started Boolean @default(false)
    users   GameUser[]
}